# ===========================================
# Shipyard - Electron Update Server Configuration
# ===========================================
# Copy this file to .env and update the values
# NEVER commit your .env file to version control!

# Database Configuration
# For Docker: use service name 'postgres' as host
# For local development: use 'localhost'
DATABASE_URL=postgresql://postgres:your-secure-db-password@postgres:5432/electron_updates

# MinIO/S3 Configuration (for Docker service)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-secure-minio-password-min-8-chars

# S3 Client Configuration
# For Docker: use service name 'minio' as host
# For external S3: use your S3 endpoint
S3_ENDPOINT=http://minio:9000
S3_PUBLIC_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=your-secure-minio-password-min-8-chars
S3_BUCKET=releases
S3_REGION=us-east-1

# NextAuth Configuration
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET=generate-a-secure-random-string-here
NEXTAUTH_URL=http://localhost:3000

# For production behind a proxy, set this to true
AUTH_TRUST_HOST=true

# Admin Bootstrap Credentials
# These are used to create the initial admin user on first run
# Change these immediately after first login!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password
