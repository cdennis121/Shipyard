# ===========================================
# Shipyard - Electron Update Server Configuration
# ===========================================
# Copy this file to .env and update the values
# NEVER commit your .env file to version control!

# ===========================================
# REQUIRED: You MUST change these values!
# ===========================================

# PostgreSQL Database Configuration
POSTGRES_USER=shipyard
POSTGRES_PASSWORD=CHANGE_ME_SECURE_DB_PASSWORD
POSTGRES_DB=shipyard

# MinIO/S3 Root Password (minimum 8 characters)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_SECURE_MINIO_PASSWORD

# NextAuth Secret - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL

# Admin Bootstrap Credentials (change after first login!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_SECURE_ADMIN_PASSWORD

# ===========================================
# Optional Configuration
# ===========================================

# S3 Client Configuration (auto-configured for Docker)
S3_ENDPOINT=http://minio:9000
S3_PUBLIC_ENDPOINT=http://localhost:9000
S3_BUCKET=releases
S3_REGION=us-east-1

# NextAuth URL (change for production)
NEXTAUTH_URL=http://localhost:3000

# For production behind a proxy, set this to true
AUTH_TRUST_HOST=true
